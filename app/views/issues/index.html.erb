<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel">
        <div class="row">
          <div class="col-md-10">
            <h1>Issues</h1>
          </div>
          <div class="col-md-2">
            <%= link_to 'New Issue', new_issue_path, {:class => "btn btn-default btn-block"} %>
          </div>
        </div>
        <div class="row">
        
          <p id="notice"><%= notice %></p>
          
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>User</th>
                <th>Kind</th>
                <th>Priority</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          
            <tbody>
              <% @issues.each do |issue| %>
                <tr>
                  <td><%= link_to issue.title, issue %></td>
                  <td><%= issue.description %></td>
                  <td><%= issue.user_id %></td>
                  <td><%= issue.kind %></td>
                  <td><%= issue.priority %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
