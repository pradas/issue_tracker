<div class="container">
  <%= form_for(issue) do |f| %>
  <% if issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <%= f.label :title %>
      <%= f.text_field :title, {:class => "form-control"} %>
    </div>
  </div>
  
  <br>

  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <%= f.label :description %>
      <%= f.text_area :description,  {:class => "form-control"} %>
    </div>
  </div>
  
  <br>
  
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <%= f.label :user_id %>
      <%= f.number_field :user_id, {:class => "form-control"} %>
    </div>
  </div>
  
  <br>
  
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <%= f.label :kind%>
        <br>
        <%= f.select :kind, options_for_select(["bug","enhancement","proposal","task"]) , {:class => "form-control"} %>

    </div>
  </div>
  
  <br>
  
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <%= f.label :priority %>
     <br>
      <%= f.select :priority, options_for_select(["trivial","minor","major","critical","blocker"]) , {:class => "form-control"} %>
    </div>
  </div>
  
  <br>
  
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-1">

      <%= f.submit 'Create Issue', :class => 'btn btn-primary' %>
    </div>

  </div>
<% end %>
