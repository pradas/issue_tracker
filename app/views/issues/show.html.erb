<p id="notice"><%= notice %></p>
<div class="container">
  <div id="issues" class="clearfix">
    <section id="issue-view" class="" data-id="20923263" data-local-id="6" data-status="1">
      <div id="issue-header" class="clearfix">
        <div class="col-md-10">
          <h1>Issues</h1>
        </div>
        <div class="col-md-2">
          <%= link_to 'New Issue', new_issue_path, {:class => "btn btn-default btn-block"} %>
        </div>
      </div>
      <div class="clearfix">
        <div class="col-md-8">
          <span class="issue-id">
              Issue  #<%= @issue.id %>
          </span>
          <a href="/issues?status="@issue.status>
            <span class="label label-success"><%= bystatus @issue.status%></span>
          </a>
        </div>
        <div class="col-md-1">
          <%= link_to 'Open', edit_issue_path(@issue) , {:class => 'btn btn-primary'} %>
        </div>
        <div class="col-md-1">
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Workflow
            <span class="caret"></span></button>
            <ul class="dropdown-menu">
            <li><a href="#">new</a></li>
            <li><a href="#">open</a></li>
            <li><a href="#">on hold</a></li>
            <li><a href="#">duplicate</a></li>
            <li><a href="#">ivalid</a></li>
            <li><a href="#">wontfix</a></li>
            <li><a href="#">closed</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-1">
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">More
            <span class="caret"></span></button>
            <ul class="dropdown-menu">
            <li><a href="#">Mark as spam</a></li>
            <li><a href="#">Delete</a></li>
            <li><a href="#">Atach files</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-1">
        <%= link_to 'Edit', edit_issue_path(@issue), {:class => "btn btn-default btn-block"} %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <div class="aui-group">
        <div class="aui-item">
          <div id="issue-main-content">
            <h1 id="issue-title"><%= @issue.title %></h1>
            <div class="issue-author">
              <a>
                <span title=@issue.user.name >
                <%= byuser @issue.user.name, @issue.user.id  %></span>
              </a>
              created an issue
              <time><%= distance_of_time_in_words( @issue.created_at , Time.now) %> ago</time>
            </div>
            <div class="issue-description wiki-content">
                <p><em>
                  <% if @issue.description %>
                    <%= @issue.description %>
                  <% else %>
                    No description provided.
                  <% end %>
                </em></p>
            </div>
  
            <div class="attachments" id="attachments">
              
            </div>
          </div>
        </div>
      </div>
      </div>
      <div class="col-md-4">
        <div class="panel panel-default col-offset-8">
          <div class="panel-body">      
            <div class="aui-item sidebar">
              <div class="issue-attrs">
              <dl>
                <dt>Assignee</dt>
                <dd class="assignee with-icon">
                    <%= byuser @issue.user.name, @issue.user.id  %>
                </dd>
              </dl>
              <dl>
                <dt>Type</dt>
                <dd class="type with-icon">
                  <%= bykind @issue.kind,true %>
                </dd>
              </dl>
              <dl>
                <dt>Priority</dt>
                <dd class="priority with-icon">
                  <%= byprior @issue.priority, true%>
                </dd>
              </dl>
              <dl>
                <dt>Status</dt>
                <dd class="status">
                  <%= bystatus @issue.status,true%>
                </dd>
              </dl>
              <dl>
                <dt>Votes</dt>
                <dd class="votes">
                  <span id="issue-vote-count" class="aui-badge">0</span>
                    <a href="/issue/6/vote" id="issue-vote-trigger" class="vote-issue" data-vote-text="Vote for this issue" data-unvote-text="Remove vote" data-voted="false" title="Vote for this issue"> Vote for this issue
                    </a>
                </dd>
              </dl>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
  
  
  
  
  
  
  
