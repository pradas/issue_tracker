      <div class="container">
<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-8">
      <span class="issue-id">
          Issue  #<%= @issue.id %>
      </span>
      <a href="/issues?status="@issue.status>
        <span class="label label-success"><%= bystatus @issue.status%></span>
      </a>
    </div>
    <div class="col-md-1">
      <% if @issue.status == "new" || @issue.status == "open" %>
        <%= update_issue_field "status","closed",'not-grey btn btn-primary','Resolve' %>
      <% else %>
        <%= update_issue_field "status","open",'not-grey btn btn-primary','Open' %>
      <% end %>
    </div>
    <div class="col-md-1">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Workflow
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><%= update_issue_field "status","new",'dropdown-button text-left' %></li>
          <li><%= update_issue_field "status","open",'dropdown-button text-left' %></li>
          <li><%= update_issue_field "status","on hold",'dropdown-button text-left' %></li>
          <li><%= update_issue_field "status","duplicate",'dropdown-button text-left' %></li>
          <li><%= update_issue_field "status","invalid",'dropdown-button text-left' %></li>
          <li><%= update_issue_field "status","wontfix",'dropdown-button text-left' %></li>
          <li><%= update_issue_field "status","closed",'dropdown-button text-left' %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-1">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">More
        <span class="caret"></span></button>
        <ul class="dropdown-menu">

        <li><%= button_to 'Mark as spam', edit_issue_path(@issue) , {:class => 'dropdown-button text-left'} %></li>
        <li><%=button_to "Delete",issue_path(@issue.id), :method => :delete, :class => "delete dropdown-button text-left", :confirm => "Are you sure ?"%></li>
        <li><%= button_to 'Attach files', edit_issue_path(@issue) , {:class => 'dropdown-button text-left'} %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-1">
    <%= link_to 'Edit', edit_issue_path(@issue), {:class => "btn btn-default btn-block"} %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h3 id="issue-title"><%= @issue.title %></h3>
      <div class="issue-author">
        <a>
          <span title=@issue.user.name >
          <%= byuser @issue.user.name, @issue.user.id  %></span>
        </a>
        created an issue
        <time><%= distance_of_time_in_words( @issue.created_at , Time.now) %> ago</time>
      </div>
      <div class="issue-description wiki-content">
          <p>
            <% if @issue.description %>
              <%= @issue.description %>
            <% else %>
              No description provided.
            <% end %>
          </p>
      </div>
      <div class="attachments" id="attachments"></div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-default col-offset-8">
        <div class="panel-body">      
          <div class="aui-item sidebar">
            <div class="issue-attrs">
            <dl>
              <dt>Assignee</dt>
              <span class="glyphicon glyphicon-user"></span><text> </text><%= byuser @issue.user.name, @issue.user.id  %>
            </dl>
            <dl>
              <dt>Type</dt>
                <%= bykind @issue.kind,true %>
            </dl>
            <dl>
              <dt>Priority</dt>
                <%= byprior @issue.priority, true%>
            </dl>
            <dl>
              <dt>Status</dt>
                <%= bystatus @issue.status%>
            </dl>
            <dl>
              <dt>Votes</dt>
                <span class="badge"><%= @issue.votes %></span>
                  <%= update_issue_field "votes",@issue.votes+1,'btn btn-link','Vote for this issue' %>
            </dl>
            <dl>
              <dt>Watchers</dt>
              <span class="badge"><%= @issue.watchers %></span>
              <%= update_issue_field "watchers",@issue.watchers+1,'btn btn-link','Watch this issue' %>
            </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="issues-comments-container">
      <h3>Comments (<%= @comments.count %>)</h3>
      <ul id="issues-comments" class="comments-list commentable">
        <% @comments.each do |comment| %>
          <li class="issue-comment comment" id="comment-<%= comment.id %>">
            <div class="col-md-1">
              <img src="https://bitbucket.org/account/pradas/avatar/32/?ts=1492956548" height="38" width="38" alt="">
            </div>
            <div class="col-md-11">
              <div class="row">
                <b><%= comment.user.name %></b>
              </div>
              <div class="row">
                <%= comment.content %>
              </div>
              <div class="row">
                <ul class="list-inline">
                  <li>
                    <a href="#edit" class="edit-comment-link">Edit</a>
                  </li>
                  <li>
                    <a class="comment-pin-link" data-pin-url="/api/internal/repositories/ASW_G13E/issue_tracker/issues/7/comments/36131714/unpin" href="#comment-pin">
                        Pin
                    </a>
                  </li>
                  <li>
                    <form method="POST" action="/ASW_G13E/issue_tracker/issue/spam/7/36131714">
                      <input name="csrfmiddlewaretoken" value="pHWvqMljq9LUfiHY32C1VvwaWKTpzR3D" type="hidden">
                      <a class="comment-spam-link" href="#comment-spam">
                          Mark as spam
                      </a>
                    </form>
                  </li>
                  <li>
                    <form method="POST" action="/ASW_G13E/issue_tracker/issue/delete/7/36131714">
                      <input name="csrfmiddlewaretoken" value="pHWvqMljq9LUfiHY32C1VvwaWKTpzR3D" type="hidden">
                      <a class="delete-link" href="#comment-delete">
                        Delete
                      </a>
                    </form>
                  </li>
                  <li>
                    <a class="permalink" href="#comment-36131714" title="Link directly to this comment">
                      <time datetime="2017-04-21T18:44:47+02:00" data-title="true" title="21 April 2017 18:44">2 days ago</time>
                    </a>
                  </li>
                </ul>
              </div>
            </li>
        <% end %>
      </ul>
      
      <hr>
      <div class="new-comment">
        <%= render 'comments/form', issue: @issue, comment: @comment %>
      </div>
    </div>
  </div></div>