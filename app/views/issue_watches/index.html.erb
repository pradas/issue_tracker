<p id="notice"><%= notice %></p>

<h1>Issue Watches</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Issue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_watches.each do |issue_watch| %>
      <tr>
        <td><%= issue_watch.user %></td>
        <td><%= issue_watch.issue %></td>
        <td><%= link_to 'Show', issue_watch %></td>
        <td><%= link_to 'Edit', edit_issue_watch_path(issue_watch) %></td>
        <td><%= link_to 'Destroy', issue_watch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue Watch', new_issue_watch_path %>
