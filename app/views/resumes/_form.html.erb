 <%= form_for resume, url: "/issues/#{@issue.id}/attachments", html: { multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :attachment %>
      <%= f.file_field :attachment, class: "required" %>
    </div>
    
    <%= f.submit "Save", id: "submit_attachment", class: "btn btn-primary", :disabled => true %>
    <a class="btn" onclick="$('#attach-form').hide();">Cancel</a>
 <% end %>